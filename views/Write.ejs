<%-include("./partials/Header")-%>
<%-include("./partials/Navbar")-%>

<div class="mt-28 ml-10 mb-0">
<a href="/ArticleOneBlogs">    
<button class="inline-flex items-center px-5 py-2.5 text-sm font-medium text-center text-white bg-blue-700 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-800">
        Back
</button>
</a>
</div>

<form class="m-10 mt-2" action="/WriteBlog" method="post">
    <div class="w-full mb-4 border border-gray-200 rounded-lg bg-gray-50  mt-20">
        <div class="flex items-center justify-between px-3 py-2 border-b ">
            <div class="flex justify-center">
                <div class="mb-3 xl:w-96">
                  <label for="UserId" class="form-label inline-block mb-2 text-gray-700 font-semibold">UserId</label>
                  <input type="text" name="UserId" class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"id="UserId" placeholder="UserId"/>
                  <label for="BlogTitle" class="form-label inline-block mb-2 text-gray-700 font-semibold">BlogTitle</label>
                  <input type="text" name="BlogTitle" class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"id="BlogTitle" placeholder="BlogTitle"/>
                  <label for="BlogCategory" class="form-label inline-block mb-2 text-gray-700 font-semibold">BlogCategory</label>
                  <input type="text" name="BlogCategory" class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"id="BlogCategory" placeholder="BlogCategory"/>
                </div>
              </div>
        </div>
        <div class="px-4 py-2 bg-white rounded-b-lg ">
            <textarea  name="BlogData"  id="BlogData" rows="10" class="block w-full px-0 text-lg text-gray-800 bg-white font-medium" placeholder="Write an article..." required></textarea>
        </div>  
    </div>
    <button type="submit" class="inline-flex items-center px-5 py-2.5 text-sm font-medium text-center text-white bg-blue-700 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-800">
        Publish post
    </button>
</form>
