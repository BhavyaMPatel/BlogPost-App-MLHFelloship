<%-include("./partials/Header")-%>
<body class="w-fit sm:w-auto m-0">
<!-- Home Body -->
<%-include("./HomeCom1")-%>
<div class="m-5 md:mt-2  text-center md:text-start">
    <h2 class="tracking-tighter text-xl font-medium text-center md:text-left text-gray-600">Trending On ArticleOne</h2>
</div>
<section class="text-gray-600 body-font m-5">
    <div class="flex flex-wrap -m-4">
      <% for (let i=0; i<3; i++) { %>
      <div class="xl:w-1/3 md:w-1/2 p-4">
        <div class="border border-gray-200 p-6 rounded-lg">
          <div class="w-10 h-10 inline-flex items-center justify-center rounded-full bg-indigo-100 text-indigo-500 mb-4">
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-6 h-6" viewBox="0 0 24 24">
              <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>   
            </svg>
          </div>
          <h2 class="text-lg text-gray-900 font-medium title-font mb-2"><%=blogs[i].Userid%></h2>
          <p class="leading-relaxed text-base"><%=blogs[i].BlogTitle%></p>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>

<script src="./script/index.js"></script>
</body>
</html>
